    float:left;
}
.section {
    width:100%;
    float:left;
    position: relative;
    display: flex;

}
.section__title {
    width:20%;
    text-align:right;
    padding:18rpx 0;
    margin-right: 20px;
}
.section__title image {
    width:48rpx;
    height:48rpx;
}
input {
    border-bottom:1px solid #f8f8f8;
    width:70%;
    font-size:16px;
    padding:8px 0;

}
.upload-photo {
    width: 50px;
    height: 40px;
    position: absolute;
    top: 0;
    right: 30px;
}

.upload-section {
    height:70px;
    line-height:54px;
}

.upload-section input {
    padding-top:18px;
    padding-bottom:18px;
}
.upload-section .upload-photo {
    top: 10px;
}

.save {
    width: 100%;
    float: left;
}
.save button {
    background-color: #0072ff;
    color: white;
    margin-right: 20px;
    margin-left: 20px;
    margin-top: 20px;
