
page{
  background: #efeff4;

}
/*search*/
.search{
  display: flex;
  height: 90rpx;
  background: #efeff4;
  position: relative;
}
.searchwrap{
  width: 100%;
  height: 60rpx;
  margin: 16rpx 180rpx 0 24rpx;
  border: 1rpx solid #6fb7dc;
  background: #ffffff;
}
.searchinput{
  float: left;
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 14rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.searchicon{
  width: 30rpx;
  height: 30rpx;
  float: left;
  margin: 16rpx 0 0 16rpx;
  background: url(http://olvgf53wq.bkt.clouddn.com/WECardsearch.png) no-repeat;
  background-size: 100% 100%;
}
/*排序*/
.filter{
  position: absolute;
  text-align: center;
  color: #666666;
  font-size: 26rpx;
  width: 160rpx;
  line-height: 50rpx;
  right: 15rpx;
  top: 26rpx;
}
.downarrow{
  width: 18rpx;
  height: 18rpx;
  display: inline-block;
  margin: 0 10rpx 0 12rpx;
  background: url(http://olvgf53wq.bkt.clouddn.com/WECarddown.png) no-repeat;
  background-size: 100% 100%;
}
/*关注和被关注*/
.payfans{
  display: flex;
  background: #ffffff;
  justify-content: space-around;
  height: 100rpx;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  font-size: 34rpx;
  margin: 0 0 20rpx 0
}
.fanswrap{
  margin: 10rpx 0 0 0;
}
.fansimg{
  width: 80rpx;
  height: 80rpx;
  float: left;
  border-radius: 6rpx;
  background: #ffffff
}
.fanstxt{ float: left; height: 80rpx; line-height: 80rpx; margin: 0 0 0 10rpx;}
#img1{ background: url(http://olvgf53wq.bkt.clouddn.com/WECardattention.jpg) no-repeat center center #e0e0e0; background-size: 100% 100%;}
#img2{ background: url(http://olvgf53wq.bkt.clouddn.com/WECardfans.jpg) no-repeat center center #e0e0e0; background-size: 100% 100%;}
/*列表*/
.nameul{
  padding: 0 20rpx;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
  list-style: none;
  margin: 0;
  background: #FFFFFF;
  font-size: 28rpx;
}
.nameli{
  padding: 20rpx 0;
  overflow: hidden;
  position: relative;
  border-bottom: 1rpx solid #D9D9D9;
}
.rightArrow{
    position: absolute;
    top:55rpx;
    right: 0;
    width: 44rpx;
    height: 44rpx;
    background: url(http://statics.myplas.com/myapp/img/classifyBack.png) no-repeat;
    background-size: 100% 100%;
}
.nameli:last-of-type{
  border-bottom: none;
}
.avatorwrap{
  width: 110rpx;
  height: 110rpx;
  float: left;
  position: relative;
}
.avator{
  width: 110rpx;
    height: 110rpx;
    border-radius: 12rpx;
    float: left;
    background: url("http://statics.myplas.com/upload/16/09/02/logos.jpg") no-repeat;
    background-size: 100% 100%;
    border: 2rpx solid #f88f5f;
    overflow: hidden;
}
.avatorimg{
  width: 110rpx;
  height: 110rpx;
}
.nameinfo{
     width: auto;
    margin: 0 10rpx 0 130rpx;
    position: relative;
    height: 112rpx;
}
.username{
  font-size: 38rpx;
